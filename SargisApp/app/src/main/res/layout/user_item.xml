<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/lay_margin"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/name_margin"
            android:layout_toEndOf="@+id/user_img"
            android:layout_toRightOf="@+id/user_img"
            android:fontFamily="monospace"
            android:text="@string/name"
            android:textSize="@dimen/name_size"
            android:textStyle="bold"
            tools:targetApi="jelly_bean" />

        <TextView
            android:id="@+id/user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/number_margin"
            android:layout_toEndOf="@+id/user_img"
            android:layout_toRightOf="@+id/user_img"
            android:text="@string/number"
            android:textSize="@dimen/number_size" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mail_margin"
            android:layout_toEndOf="@+id/user_img"
            android:layout_toRightOf="@+id/user_img"
            android:text="@string/mail"
            android:textSize="@dimen/number_size" />

        <ImageButton
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/image_btn_margin"
            android:layout_marginRight="@dimen/image_btn_margin"
            android:background="@android:color/white"
            android:src="@drawable/ic_call_black_24dp" />

        <ImageButton
            android:id="@+id/email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/call_button"
            android:layout_alignStart="@+id/call_button"
            android:layout_below="@+id/user_number"
            android:background="@android:color/white"
            android:src="@drawable/ic_mail_outline_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>